<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle">
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tilStyle">
        <item name="boxBackgroundColor">@color/cardBackground</item>
        <item name="boxCornerRadiusBottomStart">2dp</item>
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusBottomEnd">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
        <item name="boxStrokeWidth">4dp</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="materialThemeOverlay">@style/stStyle</item>
    </style>

    <style name="stStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="cardViewStyle">

        <item name="cardCornerRadius">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="style_title">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_subtitle">
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:lineSpacingExtra">4.0dp</item>

    </style>
</resources>